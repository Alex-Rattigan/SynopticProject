<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<Pane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="LoginController">
   <children>
      <ToolBar prefHeight="40.0" prefWidth="600.0">
        <items>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="MyFishingPal">
               <font>
                  <Font size="24.0" />
               </font>
            </Text>
        </items>
      </ToolBar>
      <VBox alignment="TOP_CENTER" layoutX="216.0" layoutY="143.0" spacing="10.0">
         <children>
            <TextField fx:id="usernametxt" promptText="Username" />
            <PasswordField fx:id="passwordtxt" promptText="Password" />
            <Button fx:id="loginbtn" mnemonicParsing="false" onAction="#login" text="Log In" />
            <Button fx:id="registerButton" mnemonicParsing="false" onAction="#register" text="Register"/>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
      <Text fx:id="logintxt" layoutX="25.0" layoutY="6.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Log In" textOrigin="TOP" x="250.0" y="100.0">
         <font>
            <Font name="System Bold" size="24.0" />
         </font></Text>
   </children>
</Pane>
