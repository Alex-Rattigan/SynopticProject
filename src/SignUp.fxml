            <RadioButton fx:id="fisherButton" mnemonicParsing="false" text="Fisher" toggleGroup="$toggleGroup0">
               <VBox.margin>
                  <Insets bottom="10.0" />
               </VBox.margin>
            </RadioButton>
            <Button fx:id="completeSignUpButton" mnemonicParsing="false" onAction="#signUp" text="Complete Sign Up">
               <VBox.margin>
                  <Insets left="12.0" />
               </VBox.margin>
            </Button>
            <Button fx:id="backToLoginButton" mnemonicParsing="false" onAction="#backToLogin" text="Back to Login">
               <VBox.margin>
                  <Insets left="25.0" top="5.0" />
               </VBox.margin>
